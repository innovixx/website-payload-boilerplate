{
  "name": "website-payload-boilerplate",
  "version": "0.0.0",
  "description": "A boilerplate for a Payload server",
  "repository": "git@github.com:innovixx/website-payload-boilerplate.git",
  "author": "Innovixx <support@innovixx.co.uk>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 9000",
    "cleanDev": "rm -rf ./storage && cross-env PAYLOAD_DROP_DATABASE=true PAYLOAD_SEED_DATABASE=true next dev -p 9000",
    "build": "next build",
    "serve": "cross-env NODE_ENV=production next start -p 9000",
    "payload": "payload",
    "generate:types": "payload generate:types",
    "generate:graphql": "payload generate:graphQLSchema",
    "lint": "eslint ./src/**/*.{js,jsx,ts,tsx}",
    "lint-staged": "lint-staged --verbose",
    "prepare": "husky"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.26.0",
    "@innovixx/payload-drawer-fields": "^0.0.7",
    "@payloadcms/db-mongodb": "^3.1.1",
    "@payloadcms/next": "^3.1.1",
    "@payloadcms/richtext-lexical": "^3.1.1",
    "@payloadcms/storage-azure": "^3.1.1",
    "body-parser": "^1.20.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "next": "^15.0.0",
    "payload": "^3.1.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@innovixx/eslint-config": "3.0.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.14",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "copyfiles": "^2.4.1",
    "husky": "^9.1.5",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint",
      "bash -c tsc"
    ]
  }
}